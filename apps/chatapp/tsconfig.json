{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,  // If you're using TypeScript only, set this to false
    "skipLibCheck": true, 
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",  // Use 'CommonJS' for Node.js compatibility
    "moduleResolution": "node",  
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "typings.d.ts"],
  "exclude": ["node_modules"]
}
